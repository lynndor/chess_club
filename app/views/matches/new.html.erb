<div class="container py-5">
  <div class="mb-4">
    <%= link_to "← Back to Leaderboard", leaderboard_members_path, class: "btn btn-outline-primary" %>
  </div>

  <% content_for :title, "Record Match" %>

  <h1 class="h2 mb-4 display-4 mb-4 text-center">Record a Match</h1>

  <div class="row justify-content-center">
    <div class="col-md-8 col-lg-6">
      <%= form_with(model: @match, local: true) do |form| %>
        <div class="mb-3">
          <%= form.label :player_one_id, "Player One", class: "form-label fw-semibold" %>
          <%= form.collection_select :player_one_id, @members, :id, :full_name, { prompt: "Select Player One" }, { class: "form-select" } %>
        </div>

        <div class="mb-3">
          <%= form.label :player_two_id, "Player Two", class: "form-label fw-semibold" %>
          <%= form.collection_select :player_two_id, @members, :id, :full_name, { prompt: "Select Player Two" }, { class: "form-select" } %>
        </div>

        <div class="mb-4">
          <%= form.label :result, class: "form-label fw-semibold" %>
          <%= form.select :result, Match.results.keys.map { |r| [r.humanize, r] }, { prompt: "Select Result" }, { class: "form-select" } %>
        </div>

        <div class="d-grid">
          <%= form.submit "Record Match", class: "btn btn-success btn-lg" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
