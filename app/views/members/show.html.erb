<p style="color: green"><%= notice %></p>

<%= render @member %>

  <div class="d-flex justify-content-center gap-3 mt-4">
    <%= link_to "Edit this member", edit_member_path(@member), class: "btn btn-warning" %>
    <%= link_to "Back to members", members_path, class: "btn btn-secondary" %>
    <%= button_to "Destroy this member", @member, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %>
</div>
