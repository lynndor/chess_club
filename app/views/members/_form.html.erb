<div class="container py-5">
  <div class="mb-4">
    <%= link_to "← Back to Leaderboard", leaderboard_members_path, class: "btn btn-outline-primary" %>
  </div>

  <% content_for :title, "Editing Member" %>

  <h1 class="h2 mb-4 display-4 mb-4 text-center">Editing Member</h1>

  <div class="row justify-content-center">
    <div class="col-md-8 col-lg-6">
      <%= form_with(model: member, local: true) do |form| %>
        <% if member.errors.any? %>
          <div class="alert alert-danger mb-4">
            <h2 class="fw-bold"><%= pluralize(member.errors.count, "error") %> prohibited this member from being saved:</h2>
            <ul class="mb-0">
              <% member.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <div class="mb-3">
          <%= form.label :name, class: "form-label fw-semibold" %>
          <%= form.text_field :name, class: "form-control" %>
        </div>

        <div class="mb-3">
          <%= form.label :surname, class: "form-label fw-semibold" %>
          <%= form.text_field :surname, class: "form-control" %>
        </div>

        <div class="mb-3">
          <%= form.label :email, class: "form-label fw-semibold" %>
          <%= form.email_field :email, class: "form-control" %>
        </div>

        <div class="mb-3">
          <%= form.label :birthday, class: "form-label fw-semibold" %>
          <%= form.date_field :birthday, class: "form-control" %>
        </div>

        <div class="mb-3">
          <%= form.label :games_played, class: "form-label fw-semibold" %>
          <%= form.number_field :games_played, class: "form-control" %>
        </div>

        <div class="mb-4">
          <%= form.label :current_rank, class: "form-label fw-semibold" %>
          <%= form.number_field :current_rank, class: "form-control" %>
        </div>

        <div class="d-grid">
          <%= form.submit "Save Changes", class: "btn btn-success btn-lg" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
